<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:padding="20dp">

        <TextView
            android:id="@+id/calcul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:lines="2"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@id/results"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            android:id="@+id/clear"
            style="@style/buttonNumber"
            android:textColor="@color/orange"
            android:onClick="allClearAction"
            android:layout_width="500px"
            android:text="AC"/>
        <Button
            android:id="@+id/delete"
            style="@style/buttonNumber"
            android:textColor="@color/orange"
            android:onClick="backSpaceAction"
            android:text="âŒ«"/>

        <Button
            android:id="@+id/division"
            style="@style/buttonOperator"
            android:onClick="DIV"
            android:text="/"/>

    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            android:id="@+id/nbr7"
            style="@style/buttonNumber"
            android:onClick="NB7"
            android:text="7"/>
        <Button
            android:id="@+id/nbr8"
            style="@style/buttonNumber"
            android:onClick="NB8"
            android:text="8"/>
        <Button
            android:id="@+id/nbr9"
            style="@style/buttonNumber"
            android:onClick="NB9"
            android:text="9" />
        <Button
            android:id="@+id/multiply"
            style="@style/buttonOperator"
            android:onClick="MUL"
            android:text="x"/>

    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            android:id="@+id/nbr4"
            style="@style/buttonNumber"
            android:onClick="NB4"
            android:text="4"/>
        <Button
            android:id="@+id/nbr5"
            style="@style/buttonNumber"
            android:onClick="NB5"
            android:text="5"/>
        <Button
            android:id="@+id/nbr6"
            style="@style/buttonNumber"
            android:onClick="NB6"
            android:text="6" />
        <Button
            android:id="@+id/minus"
            style="@style/buttonOperator"
            android:onClick="SUS"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            android:id="@+id/nbr1"
            style="@style/buttonNumber"
            android:onClick="NB1"
            android:text="1"/>
        <Button
            android:id="@+id/nbr2"
            style="@style/buttonNumber"
            android:onClick="NB2"
            android:text="2"/>
        <Button
            android:id="@+id/nbr3"
            style="@style/buttonNumber"
            android:onClick="NB3"
            android:text="3" />
        <Button
            android:id="@+id/plus"
            style="@style/buttonOperator"
            android:onClick="ADD"
            android:text="+"/>

    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            android:id="@+id/point"
            style="@style/buttonNumber"
            android:onClick="POINT"
            android:text="."/>
        <Button
            android:id="@+id/nbr0"
            style="@style/buttonNumber"
            android:onClick="NB0"
            android:text="0"/>
        <Button
            android:id="@+id/parenthese"
            android:onClick="parenthese"
            style="@style/buttonNumber"
            android:text="()" />
        <Button
            android:id="@+id/egale"
            style="@style/buttonNumber"
            android:textColor="@color/orange"
            android:onClick="equalsAction"
            android:text="=" />

    </LinearLayout>

</LinearLayout>